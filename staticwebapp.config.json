{
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "registration": {
          "openIdIssuer": "https://login.microsoftonline.com/b378e52f-bee1-41ed-8a95-a0fb072c8908/v2.0",
          "clientIdSettingName": "AAD_CLIENT_ID",
          "clientSecretSettingName": "AAD_CLIENT_SECRET"
        }
      }
    }
  },
  "routes": [
    { "route": "/api/*", "allowedRoles": ["toshi", "bart"] },
    { "route": "/access-denied", "allowedRoles": ["anonymous"] },
    { "route": "/*", "allowedRoles": ["toshi", "bart"] }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*", "/.auth/*", "/access-denied"]
  },
  "responseOverrides": {
    "401": { "redirect": "/.auth/login/aad", "statusCode": 302 },
    "403": { "redirect": "/access-denied", "statusCode": 302 }
  }
}