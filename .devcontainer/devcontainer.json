{
  "name": "Ocrolus Widget App",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "features": {
    "ghcr.io/devcontainers/features/github-codespaces-secrets:1": {}
  },
  "containerEnv": {
    "OCROLUS_CLIENT_ID": "${{ secrets.OCROLUS_CLIENT_ID }}",
    "OCROLUS_CLIENT_SECRET": "${{ secrets.OCROLUS_CLIENT_SECRET }}",
    "OCROLUS_WIDGET_UUID": "${{ secrets.OCROLUS_WIDGET_UUID }}",
    "OCROLUS_WIDGET_ENVIRONMENT": "${{ secrets.OCROLUS_WIDGET_ENVIRONMENT }}",
    "APP_PORT": "${{ secrets.APP_PORT }}"
  },
  "postCreateCommand": "npm install --workspaces",
  "postStartCommand": "npm run start"
}